<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:layout_marginHorizontal="8dp"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/car_image"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/lamborghini"
        app:shapeAppearanceOverlay="@style/CardView.Light"/>

    <TextView
        android:id="@+id/textview_offer_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Lamborghini Diablo"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/car_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_car_offer_startdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Sat 29th aug 2023 10:00 hrs"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="@+id/textview_offer_title"
        app:layout_constraintStart_toStartOf="@+id/textview_offer_title"
        app:layout_constraintTop_toBottomOf="@+id/textview_offer_title" />

    <TextView
        android:id="@+id/textview_car_offer_enddate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Sat 29th aug 2023 19:00 hrs"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="@+id/textview_car_offer_startdate"
        app:layout_constraintStart_toStartOf="@+id/textview_car_offer_startdate"
        app:layout_constraintTop_toBottomOf="@+id/textview_car_offer_startdate" />

    <TextView
        android:id="@+id/textview_car_offer_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Hogeschoollaan 1"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="@+id/textview_car_offer_enddate"
        app:layout_constraintStart_toStartOf="@+id/textview_car_offer_enddate"
        app:layout_constraintTop_toBottomOf="@+id/textview_car_offer_enddate" />

    <TextView
        android:id="@+id/textview_car_offer_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="$250 p/hr"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="@+id/textview_car_offer_location"
        app:layout_constraintStart_toStartOf="@+id/textview_car_offer_location"
        app:layout_constraintTop_toBottomOf="@+id/textview_car_offer_location" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_new_car_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="New car"
        android:src="@drawable/add_black_24"
        app:backgroundTint="#0084FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/car_image"
        android:background="@color/blue_200"/>

</androidx.constraintlayout.widget.ConstraintLayout>