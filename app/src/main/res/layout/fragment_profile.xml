<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    >

<!--    <ProgressBar-->
<!--        style="@style/Widget.AppCompat.ProgressBar.Horizontal"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:max="100"-->
<!--        tools:progress="40"-->
<!--        />-->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="191dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitCenter"

        android:src="@drawable/noprofilepic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circleImageView" />

    <TextView
        android:id="@+id/firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_hint_firstname"

        android:layout_marginLeft="8dp"
        android:textStyle="bold"

app:layout_constraintStart_toEndOf="@id/profile_image"
        app:layout_constraintTop_toTopOf="@+id/profile_image"/>

    <TextView
        android:id="@+id/lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/txt_hint_lastname"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/firstName"
        app:layout_constraintTop_toTopOf="@+id/profile_image" />


    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location"
        android:layout_marginLeft="8dp"

        app:layout_constraintTop_toBottomOf="@id/firstName"
        app:layout_constraintStart_toEndOf="@id/profile_image"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="location,profile_image"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="602dp"
        />


    <ImageView
        android:id="@+id/img_address"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/location_on_black_24dp"
        app:tint="#2196F3"
        android:layout_marginLeft="16dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrier1" />

    <TextView
            android:id="@+id/tv_address"
            android:text="@string/txt_hint_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/img_address"
        app:layout_constraintTop_toBottomOf="@id/barrier1"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"

        />


    <View style="@style/HorizontalLine"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_address"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tv_address,img_address"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="602dp"
        />

    <ImageView
        android:id="@+id/img_email"
        android:layout_width="24dp"
        android:layout_height="24dp"
    android:src="@drawable/email_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        app:tint="#2196F3"
        android:layout_marginLeft="16dp"

        app:layout_constraintTop_toBottomOf="@id/barrier2" />

    <TextView
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:layout_weight="1"
        android:text="@string/email"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toEndOf="@+id/img_email"
        app:layout_constraintTop_toBottomOf="@id/barrier2" />


    <View style="@style/HorizontalLine"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="email,img_email"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="602dp"
        />

    <ImageView
        android:id="@+id/img_phone"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/call_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrier3"
        android:layout_marginLeft="16dp"

        app:tint="#2196F3" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:layout_weight="1"
        android:text="@string/phone"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toEndOf="@+id/img_phone"
        app:layout_constraintTop_toBottomOf="@id/barrier3" />

    <View style="@style/HorizontalLine"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="phone,img_phone"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="602dp"
        />

    <ImageView
        android:id="@+id/img_cake"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/cake_black_24dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrier4"

        app:tint="#2196F3" />

    <TextView
        android:id="@+id/txt_birthdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:layout_weight="1"
        android:text="@string/date_of_birth"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toEndOf="@+id/img_cake"
        app:layout_constraintTop_toBottomOf="@id/barrier4" />



    <View style="@style/HorizontalLine"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_birthdate"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="img_cake,txt_birthdate"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="602dp"
        />

    <ImageView
        android:id="@+id/img_verified_user"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/verified_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrier5"
        android:layout_marginLeft="16dp"

        app:tint="#2196F3" />

    <TextView
        android:id="@+id/verified_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:layout_weight="1"
        android:text="@string/verified_user"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toEndOf="@+id/img_verified_user"
        app:layout_constraintTop_toBottomOf="@id/barrier5" />

    <View style="@style/HorizontalLine"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/verified_user"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="verified_user, img_verified_user"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="602dp"
        />

    <ImageView
        android:id="@+id/img_bonuspoints"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/savings_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrier6"
        android:layout_marginLeft="16dp"

        app:tint="#2196F3" />

    <TextView
        android:id="@+id/txt_bonuspoint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:layout_weight="1"
        android:text="@string/bonuspoints"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toEndOf="@+id/img_bonuspoints"
        app:layout_constraintTop_toBottomOf="@id/barrier6" />


    <Button
        android:id="@+id/btn_editProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_profile"

       app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_switchLanguage"
    />
    <Button
        android:id="@+id/btn_switchLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/switch_language"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_statistics"
        />
    <Button
        android:id="@+id/btn_statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/btn_editProfile"
        android:text="@string/show_statistics"
        app:layout_constraintBottom_toTopOf="@id/btn_logout"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent
"
        />




</androidx.constraintlayout.widget.ConstraintLayout>