<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    >

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        tools:progress="40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.google.android.material.imageview.ShapeableImageView
    app:shapeAppearanceOverlay="@style/circleImageView"
        android:id="@+id/profile_image"
        android:scaleType="fitCenter"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jane"
        android:textStyle="bold"

app:layout_constraintStart_toEndOf="@id/profile_image"
        app:layout_constraintTop_toTopOf="@+id/profile_image"/>

    <TextView
        android:id="@+id/lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Funcken"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/firstName"
        app:layout_constraintTop_toTopOf="@+id/profile_image" />


    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Breda"
        app:layout_constraintTop_toBottomOf="@id/firstName"
        app:layout_constraintStart_toEndOf="@id/profile_image"/>


<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/location">

        <ImageView
            android:id="@+id/img_address"
            android:layout_height="25dp"
            android:layout_width="25dp"

            />

        <TextView
            android:id="@+id/tv_dob"
            android:text="30 april 1989"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
</com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/email"
            android:layout_width="0dp"
            android:text="mail@robfuncken.nl"

            android:layout_height="wrap_content"
            android:layout_weight="1"/>


    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container"
        />

    <Button
        android:id="@+id/btn_editProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit profile"

        app:layout_constraintLeft_toRightOf="@id/btn_logout"
        app:layout_constraintTop_toBottomOf="@id/container"
        android:layout_marginLeft="10dp"
    />

    <Button
        android:id="@+id/btn_statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/btn_editProfile"
        android:text="Show statistics"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/container"
        />

</androidx.constraintlayout.widget.ConstraintLayout>