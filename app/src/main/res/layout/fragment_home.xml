<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-6dp"
    tools:context=".ui.home.HomeFragment">

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleButton_home_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <Button
            style="?attr/materialButtonStyle"
            android:id="@+id/button_home_availablecars"
            android:layout_width="0dp"
            android:paddingVertical="15dp"
            android:layout_weight="1"
            app:cornerRadius="0dp"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:text="@string/home_availablecars"
            />
        <Button
            style="?attr/materialButtonStyle"
            android:id="@+id/button_home_mybookings"
            android:layout_width="0dp"
            android:paddingVertical="15dp"
            app:cornerRadius="0dp"

            android:layout_weight="1"
            android:textSize="14sp"

            android:layout_height="wrap_content"
            android:text="@string/home_mybookings"
            />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <LinearLayout
        android:layout_marginHorizontal="0dp"
        android:layout_marginTop="-6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton_home_topbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_home_fragment_offers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_home_title"
        app:layout_constraintVertical_bias="0.0" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>